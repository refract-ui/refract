{
  "compilerOptions": {
    "composite": false,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2019",
    // "target": "esnext",
    "lib": [ "esnext", "DOM" ],
    "jsx": "react",
    "baseUrl": "./packages",
    "paths": {
      "@refract-ui/core": ["core/src"],
      "@refract-ui/docs": ["docs/src"]
    }
  },
  "include": ["packages/**/*", "babel.config.js"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
