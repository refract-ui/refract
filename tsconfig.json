{
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "esnext",
    "lib": [ "esnext", "DOM" ],
    "jsx": "react"
  },
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/docs" }
  ],
  "exclude": [
    "**/node_modules"
  ],
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ]
}
